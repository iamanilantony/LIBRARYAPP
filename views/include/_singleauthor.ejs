<div class="cardcontainer-single">
    <div class="unitcard-single">
      <img class="card-image" src="<%=author.img%>" alt="">
      <div class="card-content">
          <h1><%=author.name%></h1>
          <h2><%=author.books%></h2>
          <h3>Age : <%=author.Age%></h3>
          <h2><%=author.desc%></h2>
          <!-- Update Modal -->
          <div class="buttongroup">
            <a href="/">Home</a>  
            <button onclick="deleteauthor('<%=author._id%>')" class="buttonB <%= admin ? 'good' : 'bad' %>" data-id="">Delete</button>
            <button onclick="myFunction()" class="buttonB <%= admin ? 'good' : 'bad' %>">Edit</button>            
          </div>
          <div id="modal" class="modal" style="display: none;">
            <div class="modalcontent">
              <div class="closebutton">
                <button onclick="myFunction1()">&times;</button>
              </div>
            <h1>Update Author</h1>
            <form method="post" id="updateauthor">
                Name :
                <input type="hidden" name="id" value="<%=author._id%>">
                <input type="text" name="name" value="<%=author.name%>" placeholder='Enter the name'>
                Books :
                <input type="text" name="books" value="<%=author.books%>"  placeholder='Enter the Books'>
                Age :
                <input type="text" name="Age" value="<%=author.Age%>"  placeholder='Enter the Age'>
                Desc :
                <input type="text" name="desc" value="<%=author.desc%>"  placeholder='Enter the Desc'>
                Image url :
                <input type="text" name="img" value="<%=author.img%>"  placeholder='Enter the Image'>
                <button type="submit">Update</button>
            </form>
            </div>
          </div>
          </div>
      </div>
    </div>
  </div>
